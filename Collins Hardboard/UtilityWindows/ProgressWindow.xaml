<Window x:Class="UtilityWindows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..." Height="140" Width="325" ResizeMode="NoResize">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <ProgressBar Name="StatusProgressBar" HorizontalAlignment="Center" Height="15" Margin="-50,30,0,0" VerticalAlignment="Center" Width="220"/>
        <Label Name="LblMessage" Content="Label" HorizontalAlignment="Center" Margin="0,-30,0,0" VerticalAlignment="Center" Width="250" Height="40"/>
        <Button Name="BtnClose" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" Click="BtnClose_Click"/>
        <Label Name="LblProgress" Content="Label" HorizontalAlignment="Center" Margin="220,30,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
