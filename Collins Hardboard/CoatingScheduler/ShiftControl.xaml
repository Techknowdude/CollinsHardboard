<UserControl x:Class="CoatingScheduler.ShiftControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MinWidth="506" MinHeight="0" Height="Auto" VerticalAlignment="Top">
    <Grid VerticalAlignment="Top">
        <ListView Name="ShiftListView" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,33" Width="Auto" MinHeight="20"  Height="Auto"></ListView>
        <Button Name="BtnAddProduct" Click="BtnAddProduct_OnClick" Content="Add Product" Width="90" Height="22" Margin="4,4,4,4" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
        <Button Name="BtnAddNote" Click="BtnAddNote_OnClick" Content="Add Note" Width="90" Height="22" Margin="0,0,100,4" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
    </Grid>
</UserControl>
