<Window x:Class="ExtendedScheduleViewer.ExtendedScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtendedScheduleViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Width="100" Height="24" Grid.Row="0" Command="{Binding Path=Schedule.UpdateCommand}">Test</Button>
        <ListView Grid.Row="1" x:Name="ScheduleListView" ItemsSource="{Binding Path=DayControls}">
            
        </ListView>
    </Grid>
</Window>
