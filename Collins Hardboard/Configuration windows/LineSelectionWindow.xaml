<Window x:Class="Configuration_windows.LineSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Line Selection" Height="110.4" Width="204.8">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <ComboBox Name="LineComboBox" Height="25"/>

            <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                <Button Name="AddButton" Content="Add" Padding="6,3" Width="50" Margin="0,0,40,0" Click="AddButton_OnClick"/>
                <Button Name="CancelButton" Content="Cancel" Padding="6,3" Width="50" Click="CancelButton_OnClick"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
