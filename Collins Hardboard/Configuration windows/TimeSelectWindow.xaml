<Window x:Class="Configuration_windows.TimeSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Select time" Height="150" Width="194.277">
    <StackPanel Height="Auto" Width="150" Margin="10">
        <StackPanel Orientation="Horizontal" Width="150" Margin="0,5">
            <Label Width="Auto">Start:</Label>
            <xctk:MaskedTextBox Name="StartTextBox" Mask="99:99:99 aM"></xctk:MaskedTextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="150" Margin="0,5">
            <Label>Duration:</Label>
            <xctk:MaskedTextBox Name="DurationTextBox"  Mask="99:99:99"></xctk:MaskedTextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="ConfirmButton" Width="60" Margin="10" Click="ConfirmButton_OnClick">Confirm</Button>
            <Button Name="CancelButton" Width="60" Margin="10" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
