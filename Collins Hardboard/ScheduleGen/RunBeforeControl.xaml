<scheduleGen:GenControl x:Class="ScheduleGen.RunBeforeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scheduleGen="clr-namespace:ScheduleGen"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="355">
    <StackPanel Orientation="Horizontal" Height="24">
        <TextBox Name="PriorityTextBox" Width="80" Text="{Binding Path=PriorityText}"></TextBox>
        <Button Name="DeleteButton" Width="50" Margin="5,0" Click="DeleteButton_OnClick">Delete</Button>
        <Label>Run</Label>
        <ComboBox Name="BeforeComboBox" SelectionChanged="BeforeComboBox_OnSelectionChanged" Width="100"></ComboBox>
        <Label>Before</Label>
        <ComboBox Name="AfterComboBox" SelectionChanged="AfterComboBox_OnSelectionChanged" Width="100"></ComboBox>
    </StackPanel>
</scheduleGen:GenControl>
