<scheduleGen:GenControl x:Class="ScheduleGen.LineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scheduleGen="clr-namespace:ScheduleGen"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="460">
    <StackPanel Orientation="Horizontal" Height="24">
        <TextBox Name="PriorityTextBox" Text="{Binding Path=PriorityText}" Width="80"/>
        <Button Name="DeleteButton" Width="50" Margin="5,0" Click="DeleteButton_OnClick">Delete</Button>
        <Label>Don't run</Label>
        <ComboBox Name="LineComboBox" SelectionChanged="LineComboBox_OnSelectionChanged" Width="100">
        </ComboBox>
        <Label>line when making</Label>
        <ComboBox Name="ItemComboBox" SelectionChanged="ItemComboBox_OnSelectionChanged" Width="100"/>
    </StackPanel>
</scheduleGen:GenControl>
