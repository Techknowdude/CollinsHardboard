<UserControl x:Class="ScheduleGen.SalesPrediction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scheduleGen="clr-namespace:ScheduleGen"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="480">
    <StackPanel Orientation="Horizontal" Height="24">
        <!--<TextBox Name="PriorityTextBox" Text="{Binding Path=PriorityText}" Width="80"/>-->
        <!--<Button Name="DeleteButton" Width="50" Margin="5,0" Click="DeleteButton_OnClick">Delete</Button>-->
        <Label>Prioritize sales trends from</Label>
        <ComboBox Name="PastSalesComboBox" SelectionChanged="PastSalesComboBox_OnSelectionChanged" Width="140" SelectedIndex="4">
            <ComboBoxItem>Last Month</ComboBoxItem>
            <ComboBoxItem>Last 3 Months</ComboBoxItem>
            <ComboBoxItem>Last 6 Months</ComboBoxItem>
            <ComboBoxItem>Last 12 Months</ComboBoxItem>
            <ComboBoxItem>Same time last year</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</UserControl>
