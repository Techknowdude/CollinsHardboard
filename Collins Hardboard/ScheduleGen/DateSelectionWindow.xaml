<Window x:Class="ScheduleGen.DateSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DateSelectionWindow" Height="209.718" Width="269.662">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Starting day:</Label>
            <DatePicker Name="StartDatePicker"></DatePicker>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Ending day:</Label>
            <DatePicker Name="EndDatePicker"></DatePicker>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Consider sales due before:</Label>
            <DatePicker Name="SalesDatePicker"></DatePicker>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox VerticalAlignment="Center" Name="CbxScheduleByDueDate"></CheckBox>
            <Label>Schedule only sales by soonest due date</Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="GenerateButton" Margin="5" Width="80" Click="GenerateButton_Click">Generate</Button>
            <Button Name="CancelButton" Margin="5" Width="60" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
