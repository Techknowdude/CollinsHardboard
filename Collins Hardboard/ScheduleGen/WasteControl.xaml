<scheduleGen:GenControl x:Class="ScheduleGen.WasteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scheduleGen="clr-namespace:ScheduleGen"
             mc:Ignorable="d" 
             d:DesignHeight="300" Height="24" d:DesignWidth="400">
    <StackPanel Orientation="Horizontal">
        <TextBox Name="PriorityTextBox" Width="80" Text="{Binding Path=PriorityText}"></TextBox>
        <Button Name="DeleteButton" Width="50" Margin="5,0" Click="DeleteButton_OnClick">Delete</Button>
        <Label>Keep waste between</Label>
        <TextBox Name="WasteMinBox" Width="70" IsEnabled="False" Text="{Binding Path=WasteMin}"></TextBox>
        <Label>and</Label>
        <TextBox Name="WasteMaxBox" Width="70" IsEnabled="False" Text="{Binding Path=WasteMax}"></TextBox>
    </StackPanel>
</scheduleGen:GenControl>
