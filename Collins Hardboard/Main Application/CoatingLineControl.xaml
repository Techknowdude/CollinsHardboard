<UserControl x:Class="Main_Application.CoatingLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <TextBox Name="LineNameTextBox" Width="140" Text="{Binding Path=NameText}"></TextBox>
        <Button Name="DeleteButton" Width="60" Margin="5,0" Click="DeleteButton_OnClick">Delete</Button>
    </StackPanel>
</UserControl>
